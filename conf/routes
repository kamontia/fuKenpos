
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /user                @controllers.HomeController.index

GET         /add                 @controllers.UserController.add
POST        /create              @controllers.UserController.create

GET         /                    @controllers.LoginController.index
GET         /login               @controllers.LoginController.login
POST        /authenticate        @controllers.LoginController.authenticate
GET         /logout              @controllers.LoginController.logout

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        @controllers.Assets.versioned(path="/public", file: Asset)

      